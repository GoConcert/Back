<%- model_class = ConcertPreference -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:concert_id) %></th>
      <th><%= model_class.human_attribute_name(:style_id) %></th>
      <th><%= model_class.human_attribute_name(:order) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @concert_preferences.each do |concert_preference| %>
      <tr>
        <td><%= link_to concert_preference.id, concert_preference_path(concert_preference) %></td>
        <td><%= concert_preference.concert_id %></td>
        <td><%= concert_preference.style_id %></td>
        <td><%= concert_preference.order %></td>
        <td><%=l concert_preference.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_concert_preference_path(concert_preference), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      concert_preference_path(concert_preference),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_concert_preference_path,
            :class => 'btn btn-primary' %>
